@model ReviewViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<div class="card mt-3">
    <div class="card-body">
        <form asp-action="Create" class="row g-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-12">
                <label asp-for="Text" class="form-label"></label>
                <textarea asp-for="Text" class="form-control" placeholder="Enter review text here..." rows="5"></textarea>
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <div class="col-12">
                <label asp-for="ReviewerName" class="form-label"></label>
                <input asp-for="ReviewerName" class="form-control" />
                <span asp-validation-for="ReviewerName" class="text-danger"></span>
            </div>
            <div class="col-12">
                <label asp-for="Rating" class="form-label"></label>
                <select asp-for="Rating" class="form-select">
                    <option selected>Please select</option>
                    @for (var i = 1; i <= 5; i++)
                    {
                        <option value="@i">@i</option>
                    }
                </select>
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="col-12">
                <div class="form-check">
                    <input asp-for="IsPublished" class="form-check-input" checked="checked" />
                    <label asp-for="IsPublished" class="form-check-label"></label>
                </div>
            </div>
            <div class="col-12">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a class="btn btn-light" asp-action="Index">Back</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}