@page
@using Microsoft.AspNetCore.Localization
@model SuccessModel
@{
    ViewData["Title"] = "Κάντε Κράτηση";

    var requestCulture = HttpContext.Features.Get<IRequestCultureFeature>();
    var requestCultureName = requestCulture?.RequestCulture.Culture.Name == "el" ? "" : "en";
}

<div class="reservation-success-container container text-center py-50">
    <svg xmlns="http://www.w3.org/2000/svg" width="150" height="150" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1">
        <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
    </svg>
    <h2>@Localizer["ThankYou"]</h2>
    <p>@Localizer["SuccessInfo"]</p>
    <p>@Localizer["ContactUsInfo", "2101234567"]</p>
    <a asp-area="" asp-page="/Index" asp-route-culture="@requestCultureName" class="fw-700 btn btn-secondary-outlined">@Localizer["Αρχική Σελίδα"]</a>
</div>